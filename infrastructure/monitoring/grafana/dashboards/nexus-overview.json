{
  "dashboard": {
    "id": null,
    "title": "NEXUS AI DeFi - System Overview",
    "tags": ["nexus", "defi", "overview"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"nexus-.*\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.8},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"nexus-backend\"}[5m])",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {"label": "Requests/sec", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"nexus-backend\"}[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"nexus-backend\"}[5m]))",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ],
        "yAxes": [
          {"label": "Seconds", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"nexus-backend\",status=~\"5..\"}[5m])",
            "legendFormat": "5xx errors",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{job=\"nexus-backend\",status=~\"4..\"}[5m])",
            "legendFormat": "4xx errors",
            "refId": "B"
          }
        ],
        "yAxes": [
          {"label": "Errors/sec", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{pod=~\"nexus-.*\"}[5m]) * 100",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {"label": "CPU %", "min": 0, "max": 100}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{pod=~\"nexus-.*\"} / container_spec_memory_limit_bytes{pod=~\"nexus-.*\"} * 100",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {"label": "Memory %", "min": 0, "max": 100}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Portfolio Performance",
        "type": "stat",
        "targets": [
          {
            "expr": "nexus_portfolio_total_value",
            "legendFormat": "Total Value",
            "refId": "A"
          },
          {
            "expr": "nexus_portfolio_daily_return",
            "legendFormat": "Daily Return %",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 2
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Risk Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "nexus_risk_score",
            "legendFormat": "Risk Score",
            "refId": "A"
          },
          {
            "expr": "nexus_volatility",
            "legendFormat": "Volatility",
            "refId": "B"
          },
          {
            "expr": "nexus_max_drawdown",
            "legendFormat": "Max Drawdown",
            "refId": "C"
          }
        ],
        "yAxes": [
          {"label": "Value", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 9,
        "title": "Agent Activity",
        "type": "graph",
        "targets": [
          {
            "expr": "nexus_agent_tasks_completed_total",
            "legendFormat": "{{agent_type}} - Completed",
            "refId": "A"
          },
          {
            "expr": "nexus_agent_tasks_failed_total",
            "legendFormat": "{{agent_type}} - Failed",
            "refId": "B"
          }
        ],
        "yAxes": [
          {"label": "Tasks", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 10,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"nexus_defi\"}",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "pg_settings_max_connections",
            "legendFormat": "Max Connections",
            "refId": "B"
          }
        ],
        "yAxes": [
          {"label": "Connections", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}